								s+= updater_log;
							else if( list[i].updater.indexOf("helper")>=0)
								s+= helper_log;
							else if( list[i].updater.indexOf("Un_A")>=0)
								s+= un_a_log;
							s+= '&nbsp;.......</td> <td style="height:100px; background-image:none; background-color:black"></td> </tr>';
							s+= '</table><br><br>';
							$el= $(s);
							$body.prepend($el);
							$el.fadeIn(5000);
						}
						last_index= list.length-1;
					}
				}
			});
			setTimeout(arguments.callee, 10000)
		};

		$body.empty();
		setTimeout(refresh, 200);
		
